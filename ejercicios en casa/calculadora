    <script>
        const display = document.getElementById('display');

        function appendCharacter(character) {
            display.value += character;
        }

        function clearDisplay() {
            display.value = '';
        }

        function calculate() {
            try {
                display.value = caca(display.value);
            } catch (error) {
                display.value = 'Error';
            }
        }
